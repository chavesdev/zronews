<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.chavesdev.zronews.news.viewmodel.NewsItemListViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginEnd="@dimen/margin_between_elements">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:id="@+id/card_img"
            android:minWidth="222dp"
            android:layout_height="109dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="@dimen/default_corner_radius">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_news"
                android:background="@color/gray"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_news_title"
            android:textAppearance="@style/ZroNewsTitle"
            app:layout_constraintTop_toBottomOf="@id/card_img"
            android:layout_marginTop="@dimen/margin_between_elements"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/card_img"
            android:text="@{viewModel.title}"
            tools:text="Como ser Fitness"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_news_description"
            android:textSize="@dimen/text_news_description_size"
            app:layout_constraintTop_toBottomOf="@id/text_news_title"
            android:layout_marginTop="@dimen/margin_between_elements"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/card_img"
            android:text="@{viewModel.description}"
            tools:text="Os desafios de comer saudavel no seculo 21"/>

        <androidx.cardview.widget.CardView
            android:layout_width="33dp"
            android:layout_height="4dp"
            app:cardCornerRadius="@dimen/default_corner_radius"
            app:layout_constraintTop_toBottomOf="@id/text_news_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_between_elements"
            android:backgroundTint="@color/gray"
            android:elevation="0dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
